{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "lib": [
      "ES2020.Promise"
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true, 
    "outDir": "./dist",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "src/mocks/*.ts",
    "vite.config.ts",
    "**/*.test.ts"
  ]
}
